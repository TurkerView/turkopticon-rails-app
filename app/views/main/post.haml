#post
  %h1= @post.title
  %h2= @post.created_at.strftime("%a %b %d %Y %H:%M %Z")
  %h2= @post.author_email
  - if current_user and current_user.person_id == current_user.id
    %h3= link_to "edit", :action => "edit_post", :id => @post.id
  %p= @post.body.gsub(/\n/,"<br/>").html_safe
  .indent= render :partial => "post", :collection => @post.children
  - if current_user
    = render :partial => "comment_form"
