= error_messages_for :post
= form_tag(:action => 'add_post') do
  = hidden_field :post, :title, :value => "Re: " + @post.title
  = text_area :post, :body, :value => "", :style => "width: 100%; height: 10em"
  = hidden_field :post, :person_id, :value => session[:person_id]
  = hidden_field :post, :parent_id, :value => @post.id
  %br/
  = submit_tag "Post Comment"
