%h1 Edit Flag

.report
  %p
    %strong.label AMT Requester Name &amp; ID
    = @report.requester_amzn_name + " (" + @report.requester_amzn_id + ")"
  %p
    %strong.label Description
    = h(@report.description.censor).gsub(/\r\n/,"<br/>")
  %p
    %strong.label Posted On
    = @report.created_at.strftime("%b %d %Y")

= error_messages_for :flag
= form_tag(:action => 'edit_flag') do
  = hidden_field :flag, :report_id, :value => @report.id
  = hidden_field :flag, :person_id, :value => @flag.person_id
  %br/
  = text_area :flag, :comment
  %p
    %div{:style => "text-align: right; width: 26em;"}= submit_tag 'Update Flag'
