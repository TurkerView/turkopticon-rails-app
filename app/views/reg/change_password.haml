= error_messages_for current_user

= form_for current_user, as: :person do |f|
  %p
    Change password for
    %strong= current_user.email
    to
    %br/
    = f.password_field "password"

  %p
    Confirm
    %br/
    = f.password_field "password_confirmation"

  %p
    = submit_tag "Change my password"
