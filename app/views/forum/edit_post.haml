= form_tag(:action => 'edit_post') do
  %p
    %strong Title
    %br/
    = text_field :forum_post_version, :title, :value => @current_version.title
  %p
    %strong Body
    %br/
    = text_area :forum_post_version, :body, :value => @current_version.body
  = hidden_field :forum_post_version, :person_id, :value => @person.id.to_s
  = hidden_field :forum_post_version, :ip, :value => request.remote_ip
  %p= submit_tag "Update"
